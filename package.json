{
  "name": "perfect-catch-automation-server",
  "version": "2.0.0",
  "description": "ServiceTitan automation proxy server for Perfect Catch",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "NODE_ENV=development node --watch src/server.js",
    "legacy": "node api-server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "smoke": "node scripts/smoke-test.js",
    "recent-customers": "node scripts/get-recent-customers.js",
    "lint": "eslint src/",
    "format": "prettier --write 'src/**/*.js'"
  },
  "dependencies": {
    "express": "^4.21.0",
    "node-fetch": "^3.3.2",
    "dotenv": "^16.4.0",
    "pino": "^9.0.0",
    "pino-pretty": "^11.0.0",
    "zod": "^3.23.0",
    "express-rate-limit": "^7.4.0"
  },
  "devDependencies": {
    "vitest": "^2.0.0",
    "supertest": "^7.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}