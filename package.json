{
  "name": "perfect-catch-automation-server",
  "version": "2.0.0",
  "description": "ServiceTitan automation proxy server for Perfect Catch with Pricebook Sync Engine",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "NODE_ENV=development node --watch src/server.js",
    "legacy": "node api-server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "smoke": "node scripts/smoke-test.js",
    "recent-customers": "node scripts/get-recent-customers.js",
    "lint": "eslint src/",
    "format": "prettier --write 'src/**/*.js'",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "node prisma/seed.js",
    "sync:full": "node scripts/run-sync.js --full",
    "sync:incremental": "node scripts/run-sync.js --incremental",
    "sync:initial": "node scripts/run-initial-sync.js",
    "sync:st-full": "node -e \"import('./src/services/sync/sync-orchestrator.js').then(m => m.runFullSync().then(console.log))\"",
    "sync:st-incremental": "node -e \"import('./src/services/sync/sync-orchestrator.js').then(m => m.runIncrementalSync().then(console.log))\"",
    "sync:reference": "node -e \"import('./src/services/sync/sync-reference-data.js').then(m => m.syncReferenceData().then(console.log))\"",
    "sync:enhanced": "node -e \"import('./src/services/sync/sync-orchestrator-enhanced.js').then(m => m.runFullSync().then(console.log).catch(console.error))\"",
    "sync:customers": "node -e \"import('./src/services/sync/sync-customers-enhanced.js').then(m => m.syncCustomers().then(console.log).catch(console.error))\"",
    "sync:jobs": "node -e \"import('./src/services/sync/sync-jobs-enhanced.js').then(m => m.syncJobs().then(console.log).catch(console.error))\"",
    "sync:estimates": "node -e \"import('./src/services/sync/sync-estimates-enhanced.js').then(m => m.syncEstimates().then(console.log).catch(console.error))\"",
    "sync:invoices": "node -e \"import('./src/services/sync/sync-invoices-enhanced.js').then(m => m.syncInvoices().then(console.log).catch(console.error))\"",
    "sync:appointments": "node -e \"import('./src/services/sync/sync-appointments-enhanced.js').then(m => m.syncAppointments().then(console.log).catch(console.error))\"",
    "sync:technicians": "node -e \"import('./src/services/sync/sync-technicians-enhanced.js').then(m => m.syncTechnicians().then(console.log).catch(console.error))\"",
    "sync:reference-enhanced": "node -e \"import('./src/services/sync/sync-reference-data-enhanced.js').then(m => m.syncReferenceData().then(console.log).catch(console.error))\"",
    "sync:aggregates": "PGPASSWORD='Catchadmin@2025' psql -h localhost -p 6432 -U postgres -d perfectcatch_automation -c 'SELECT refresh_all_aggregates()'",
    "sync:gap-analysis": "node scripts/gap-analysis.js",
    "sync:backfill": "node scripts/backfill-missing.js",
    "ghl:sync:opportunities": "node -e \"import('./src/integrations/ghl/sync-opportunities-from-ghl.js').then(m => m.syncOpportunitiesFromGHL().then(console.log))\"",
    "ghl:sync:contacts": "node -e \"import('./src/integrations/ghl/sync-contacts-from-ghl.js').then(m => m.syncContactsFromGHL().then(console.log))\"",
    "ghl:sync:estimates": "node -e \"import('./src/integrations/ghl/index.js').then(m => m.syncPendingEstimatesToGHL().then(console.log))\"",
    "ghl:sync:all": "npm run ghl:sync:contacts && npm run ghl:sync:opportunities",
    "ghl:push:estimates": "npm run ghl:sync:estimates",
    "worker:sync": "node src/services/sync/sync-scheduler.js",
    "worker:workflows": "node scripts/start-workflow-workers.js",
    "worker:monitor": "node scripts/start-self-healing-agent.js",
    "test:workflow": "node scripts/test-workflow-trigger.js",
    "workflow:status": "node scripts/check-workflow-status.js",
    "health:check": "curl -s http://localhost:3001/health/detailed | node -e \"process.stdin.on('data',d=>console.log(JSON.parse(d)))\""
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
    "@prisma/client": "^5.22.0",
    "@slack/web-api": "^7.13.0",
    "axios": "^1.13.2",
    "deep-diff": "^1.0.2",
    "dotenv": "^16.4.0",
    "express": "^4.21.0",
    "express-rate-limit": "^7.4.0",
    "ioredis": "^5.4.1",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.2",
    "openai": "^4.73.0",
    "p-queue": "^8.0.1",
    "p-retry": "^6.2.0",
    "pg": "^8.16.3",
    "pino": "^9.0.0",
    "pino-pretty": "^11.0.0",
    "uuid": "^10.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "eslint": "^9.0.0",
    "prettier": "^3.3.0",
    "prisma": "^5.22.0",
    "supertest": "^7.0.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  }
}
