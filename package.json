{
  "name": "perfect-catch-automation-server",
  "version": "2.0.0",
  "description": "ServiceTitan automation proxy server for Perfect Catch with Pricebook Sync Engine",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "NODE_ENV=development node --watch src/server.js",
    "legacy": "node api-server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "smoke": "node scripts/smoke-test.js",
    "recent-customers": "node scripts/get-recent-customers.js",
    "lint": "eslint src/",
    "format": "prettier --write 'src/**/*.js'",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "node prisma/seed.js",
    "sync:full": "node scripts/run-sync.js --full",
    "sync:incremental": "node scripts/run-sync.js --incremental"
  },
  "dependencies": {
    "express": "^4.21.0",
    "node-fetch": "^3.3.2",
    "dotenv": "^16.4.0",
    "pino": "^9.0.0",
    "pino-pretty": "^11.0.0",
    "zod": "^3.23.0",
    "express-rate-limit": "^7.4.0",
    "@prisma/client": "^5.22.0",
    "node-cron": "^3.0.3",
    "openai": "^4.73.0",
    "ioredis": "^5.4.1",
    "uuid": "^10.0.0",
    "deep-diff": "^1.0.2",
    "p-queue": "^8.0.1",
    "p-retry": "^6.2.0"
  },
  "devDependencies": {
    "vitest": "^2.0.0",
    "supertest": "^7.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.3.0",
    "prisma": "^5.22.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  }
}