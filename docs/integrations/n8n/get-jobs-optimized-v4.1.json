    {
      "parameters": {
        "jsCode": "// Calculate workflow duration\nconst startTime = $('Schedule Trigger (Every 5 min)').first().json.timestamp || new Date();\nconst durationMs = Date.now() - new Date(startTime).getTime();\n\n// Get batch result\nconst batchResult = $('Batch Upsert to Database').first().json;\n\nreturn {\n  json: {\n    syncType: 'job_pull',\n    status: 'completed',\n    recordsProcessed: batchResult.total || 0,\n    recordsSucceeded: batchResult.succeeded || 0,\n    recordsFailed: batchResult.failed || 0,\n    workflowExecutionId: $workflow.id,\n    durationMs: durationMs,\n    metadata: {\n      version: 'v4.1-fixed',\n      batchProcessing: true,\n      businessUnitGroups: {\n        sales: [1314, 4622],\n        install: [1308, 4623],\n        service: [54670601, 26143]\n      }\n    }\n  }\n};"
      },
