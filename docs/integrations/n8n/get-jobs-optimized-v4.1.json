    {
      "parameters": {
        "jsCode": "// Get the jobs from ServiceTitan response\nconst input = $input.item.json;\n\n// Handle different response formats\nlet jobs = [];\nif (Array.isArray(input)) {\n  jobs = input;\n} else if (input.data && Array.isArray(input.data)) {\n  jobs = input.data;\n} else if (input.jobs && Array.isArray(input.jobs)) {\n  jobs = input.jobs;\n} else {\n  jobs = [input];\n}\n\n// If no jobs, return early\nif (!jobs || jobs.length === 0) {\n  return [{\n    json: {\n      hasJobs: false,\n      count: 0,\n      jobs: []\n    }\n  }];\n}\n\n// Transform jobs into batch upsert format\n// Handles BOTH flat format (your API) and nested format (standard ST)\nconst jobsForUpsert = jobs.map(job => {\n  \n  // Customer data - handle flat format (firstName, lastName) or nested (customer.name)\n  const customerData = {\n    customerId: job.customerId,\n    locationId: job.locationId,\n    firstName: job.firstName || job.customer?.name?.split(' ')[0] || '',\n    lastName: job.lastName || job.customer?.name?.split(' ').slice(1).join(' ') || '',\n    email: job.email || job.customer?.email || '',\n    phone: job.phone || job.customer?.phoneNumber || '',\n    address: {\n      street: job.address?.street || job.location?.address?.street || '',\n      city: job.address?.city || job.location?.address?.city || '',\n      state: job.address?.state || job.location?.address?.state || '',\n      zip: job.address?.zip || job.location?.address?.zip || '',\n      county: job.address?.county || job.location?.address?.county || ''\n    }\n  };\n  \n  // Job data - handle flat format (jobId, description) or nested (id, summary)\n  const jobData = {\n    id: job.jobId || job.id,\n    jobNumber: (job.jobId || job.id || job.jobNumber).toString(),\n    customerId: job.customerId,\n    locationId: job.locationId,\n    businessUnitId: job.businessUnitId,\n    jobTypeId: job.jobTypeId,\n    jobTypeName: job.jobTypeName || job.jobType?.name || 'Unknown',\n    jobStatus: job.status || job.jobStatus || 'Unknown',\n    priority: job.priority || 'Normal',\n    summary: job.description || job.summary || '',\n    createdOn: job.createdAt || job.createdOn,\n    completedOn: job.completedOn || null,\n    modifiedOn: job.modifiedOn || job.createdAt || job.createdOn,\n    firstAppointmentId: job.firstAppointmentId || null,\n    lastAppointmentId: job.lastAppointmentId || null,\n    appointmentCount: job.appointmentCount || 0,\n    total: job.total || 0,\n    invoiceId: job.invoiceId || null,\n    estimateIds: job.estimateIds || [],\n    noCharge: job.noCharge || false,\n    campaignId: job.campaignId || null,\n    leadCallId: job.leadCallId || null,\n    tagTypeIds: job.tagTypeIds || []\n  };\n  \n  return {\n    job: jobData,\n    customer: customerData\n  };\n});\n\n// Return formatted batch\nreturn [{\n  json: {\n    hasJobs: true,\n    count: jobs.length,\n    jobs: jobsForUpsert\n  }\n}];"
      },
