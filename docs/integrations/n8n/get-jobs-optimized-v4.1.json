    {
      "parameters": {
        "jsCode": "// Transform jobs from database format to GHL-ready format with routing\nconst response = $input.item.json;\nconst jobs = response.jobs || [];\n\nif (!jobs || jobs.length === 0) {\n  return [];\n}\n\n// Business Unit IDs:\n// Sales: Electrical Sales (1314), Pool Sales (4622)\n// Install: Electrical Install (1308), Pool Install (4623)\n// Service: Electrical Service (54670601), Pool Service (26143)\nconst SALES_BU_IDS = [1314, 4622];\nconst INSTALL_BU_IDS = [1308, 4623];\nconst SERVICE_BU_IDS = [54670601, 26143];\n\n// Transform each job into GHL-ready format with route\nreturn jobs.map(job => {\n  const buId = Number(job.business_unit_id);\n  \n  // Determine route based on business unit\n  let route = 'unknown';\n  if (SALES_BU_IDS.includes(buId)) {\n    route = 'sales';\n  } else if (INSTALL_BU_IDS.includes(buId)) {\n    route = 'install';\n  } else if (SERVICE_BU_IDS.includes(buId)) {\n    route = 'service';\n  }\n  \n  return {\n    json: {\n      // Job identifiers\n      jobId: job.st_job_id,\n      jobNumber: job.st_job_number,\n      customerId: job.st_customer_id,\n      locationId: job.st_location_id,\n      businessUnitId: job.business_unit_id,\n      \n      // Job details\n      jobTypeName: job.job_type_name || 'Unknown',\n      jobStatus: job.job_status,\n      summary: job.summary || '',\n      description: job.summary || '',\n      \n      // Customer info\n      firstName: job.first_name || '',\n      lastName: job.last_name || '',\n      name: `${job.first_name || ''} ${job.last_name || ''}`.trim(),\n      email: job.email || '',\n      phone: job.phone || '',\n      \n      // Address\n      street: job.street || '',\n      city: job.city || '',\n      state: job.state || '',\n      postalCode: job.postal_code || '',\n      zip: job.postal_code || '',\n      county: job.county || '',\n      \n      // Pipeline routing\n      route: route,\n      ghlPipelineName: job.ghl_pipeline_name || route,\n      \n      // For sync status updates\n      st_job_id: job.st_job_id\n    }\n  };\n});"
      },
